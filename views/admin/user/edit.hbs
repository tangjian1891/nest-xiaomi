{{>   page_layout }}

<div class='content'>
    {{>page_aside}}

    <div class="main">
        <div class="container-fluid page">
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        增加管理员
                    </div>
                    <div class="panel-body">
                        <div class="table-responsive input-form">
                            <form action="/admin/user/doEdit" method="post">
                                <input type="hidden" name="_id" value="{{data._id}}">
                                <ul>
                                    <li> 用户名称: <input type="text" name="username" value="{{data.username}}" /></li>
                                    <li> 用户密码: <input type="password" name="password" /></li>
                                    <li>
                                        <select name="role_id">
                                            {{#each roleData}}
                                            {{#if (isSelect this ../data.role_id )}}
                                            <option selected value="{{this._id}}">{{this.title}}</option>

                                            {{else}}
                                            <option value="{{this._id}}">{{this.title}}</option>
                                            {{/if}}
                                            {{/each}}
                                        </select>
                                    </li>
                                    <li>
                                        <br />
                                        <button type="submit" class="btn btn-default">提交</button>
                                    </li>

                                </ul>
                            </form>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>


</body>

</html>